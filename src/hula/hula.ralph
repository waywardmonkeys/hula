(define-module hula
  import: (runtime/core toolbox/dom hula/interface)
  export: (main))

(define-function main ()
  (bind ((window (make <window> label: "Test"))
         (resizer (make <resizer>
                        min-width: 100
                        min-height: 200
                        max-width: 200
                        max-height: 300))
         (closer (make <closer>))
         (dragger (make <dragger> handle: (get window "header"))))
    (attach resizer window)
    (attach closer window)
    (attach dragger window)
    ;; (add-listener window "resize"
    ;;               (method (event)
    ;;                 (log "!!" event)))
    (attach window (js:get-property document "body"))))